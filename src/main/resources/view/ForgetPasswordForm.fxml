            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <JFXButton fx:id="btnSubmit" layoutX="150.0" layoutY="604.0" onAction="#btnSubmitOnAction" prefHeight="46.0" prefWidth="389.0" style="-fx-background-color: #3674B5; -fx-background-radius: 20;" text="Submit">
