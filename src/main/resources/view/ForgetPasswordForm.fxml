<AnchorPane fx:id="rootPane" prefHeight="750.0" prefWidth="1200.0" style="-fx-background-color: #CBDCEB;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.ForgetPasswordFormController">
   <children>
      <ImageView fx:id="imgBack" fitHeight="58.0" fitWidth="58.0" layoutX="51.0" layoutY="35.0" onMouseClicked="#imgBackOnAction" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/backImg.png" />
         </image>
      </ImageView>
      <Label fx:id="lblLogin" layoutX="146.0" layoutY="171.0" opacity="0.9" styleClass="txtWelcome" text="Forgot something?">
         <font>
            <Font name="System Bold" size="47.0" />
         </font>
      </Label>
      <Label layoutX="149.0" layoutY="244.0" opacity="0.8" style="-fx-text-fill: #2B2B2B;" text="Enter your email below to receive password reset">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="149.0" layoutY="326.0" opacity="0.8" style="-fx-text-fill: #2B2B2B;" text="Email">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtEmail" layoutX="149.0" layoutY="354.0" prefHeight="46.0" prefWidth="389.0" promptText="Enter Your Email Here" style="-fx-background-radius: 20;">
